<%- include('partials/header'); -%>

<div class="container" id="booking">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title py-3 px-5" style="text-align:center;">Book Your Appointment</h2>
            <hr>
            <form class="py-3 px-3" action="/cods/service-booking" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1">Address</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" name="address" required>
                    <!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Phone No.</label>
                    <input type="tel" class="form-control" id="exampleInputEmail1" name="phone" required>
                    <!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Select Date & Time</label>
                    <input type="date" name="serviceDate" class="form-control" id="exampleInputPassword1">
                    <div class="row py-3">
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime"  class="btn btn-outline-info btn-lg" value="11 AM - 11:30 AM">
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime" class="btn btn-outline-info btn-lg" value="11:30 AM - 12 PM">
                        </div>
                    </div>
                    <div class="row py-3">
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime" class="btn btn-outline-info btn-lg" value="12 PM - 12:30 PM">
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime" class="btn btn-outline-info btn-lg" value="12:30 PM - 1 PM">
                        </div>
                    </div>
                    <div class="row py-3">
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime" class="btn btn-outline-info btn-lg" value="1 PM - 1:30 PM">
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime" class="btn btn-outline-info btn-lg" value="1:30 PM - 2 PM">
                        </div>
                    </div>
                    <div class="row py-3">
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime" class="btn btn-outline-info btn-lg" value="2 PM - 2:30 PM">
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime" class="btn btn-outline-info btn-lg" value="2:30 PM - 3 PM">
                        </div>
                    </div>
                    <div class="row py-3">
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime" class="btn btn-outline-info btn-lg" value="3 PM - 3:30 PM">
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime" class="btn btn-outline-info btn-lg" value="3:30 PM - 4 PM">
                        </div>
                    </div>
                    <div class="row py-3">
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime" class="btn btn-outline-info btn-lg" value="4 PM - 4:30 PM">
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <input type="button" name="serviceTime" class="btn btn-outline-info btn-lg" value="4:30 PM - 5 PM">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-secondary btn-lg btn-block py-3" id="submit">Confirm Booking</button>
            </form>
        </div>
    </div>
</div>

















<%- include('partials/footer'); -%>